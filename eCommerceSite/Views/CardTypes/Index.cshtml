@model IEnumerable<eCommerceSite.Data.Card>

@{
    ViewData["Title"] = "Index";
}

<h2>Purchase a Card</h2>

@foreach (var card in Model)
{
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="@card.ImageUrl" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">@card.Name</h5>
            <p class="card-text">@card.Price.ToString("c") - @card.Description</p>
            
            <form class="form-inline" asp-action="add" asp-controller="CardTypes" method="get">
                <label for="quantity">Quantity</label>
                <input class="form-control" type="number" value="1" min="1" max="10" name="quantity">
                <input type="hidden" value="@card.CardID" name="id" />
                <button class="btn btn-default" onclick="location.href='@Url.Action("Index", "Cart")'">Add To Cart</button>
            </form>
        </div>
        
    </div>

}

